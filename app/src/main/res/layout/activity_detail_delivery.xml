<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery.DetailDelivery"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:padding="5dp">

    <TextView
        android:id="@+id/user_email_delivery1"
        android:textAlignment="center"
        android:layout_gravity="top"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELIVERY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Layout_type_delivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/min_content_height"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:textAlignment="center">


<!--        <TextView
            android:id="@+id/type_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men's Shirt"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:visibility="gone"/>-->

        <LinearLayout
            android:id="@+id/layout_order_id_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Order id : "/>
            <TextView
                android:id="@+id/delivery_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ORDER ID"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fullname_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Customer Name"/>
            <TextView
                android:id="@+id/delivery_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NAME"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mobile_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Mobile : "/>
            <TextView
                android:id="@+id/delivery_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_address_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Address : "/>
            <TextView
                android:id="@+id/delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_email_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Email id : "/>
            <TextView
                android:id="@+id/user_email_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/status_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>


        <Button
            android:id="@+id/btn_change_status_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered!"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>