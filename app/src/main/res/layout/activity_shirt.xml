<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".measurement.Shirt">
    <TextView
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO"/>
      <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's Shirt"
                android:textSize="30dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measurement"
                android:textSize="30dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/MenShirt"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/shirt" />
            <EditText
                android:id="@+id/mens_shirt_neck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Neck"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_chest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chest"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_waist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waist"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_sleeves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sleeves"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_hips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hip"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_bicep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bicep"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_cuff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cuff"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shirt Length"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_armwhole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Arm Whole"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_shoulder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shoulder"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_shirt_sleeves_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sleeves Length"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/status_marketing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_mens_shirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stitch!"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>