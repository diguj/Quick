<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".measurement.Pant">

    <TextView
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO"/>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men's Pant"
                android:textSize="30dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measurement"
                android:textSize="30dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/MenShirt"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/shirt" />
            <EditText
                android:id="@+id/mens_pant_waist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waist"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_abdomen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Abdomen"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_thigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thigh"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_hips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hip"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_knee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Knee"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_calf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calf"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_ankle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ankle"
                android:inputType="number"/>
            <EditText
                android:id="@+id/mens_pant_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comment"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_mens_pant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stitch!"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>